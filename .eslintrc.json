{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "extends": ["plugin:v3xlabs/recommended", "plugin:@next/next/recommended", "plugin:jsx-a11y/recommended"],
	"ignorePatterns": ["!**/*"],
    "plugins": ["v3xlabs", "jsx-a11y"],

    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "es2022": true
    },
    "rules": {
        "quotes": ["error", "double"],
        "unicorn/prefer-module": "off",
        "unicorn/prevent-abbreviations": "off",
        "unicorn/prefer-at": "off",
        "unicorn/prefer-node-protocol": "off",
        "@next/next/no-img-element": "off"
    }
}
